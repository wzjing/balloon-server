extends layout
block head
  head
    link(rel='stylesheet', href='/stylesheets/user.css')
    script(src='/javascripts/lib/ajax.js')
    title= title
block content
  .toolbar.elevation-2
    .toolbar-logo--layout(onclick="javascripts:window.location.href='/'")
      .logo-colored
      .toolbar-title Balloon
    .icon-exit
  .content
    .info-panel.elevation-2
      .icon-edit
      img.avatar(src='/api/avatar?username=' + username)
      .username= username
      .row
        .hint 昵称
        .value= nickname
      .row
        .hint 手机
        .value= phone
      .row
        .hint 邮箱
        .value= email
      .row
        .hint 生日
        .value= birth
  script.